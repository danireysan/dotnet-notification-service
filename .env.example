# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name

# Connection Details
DB_HOST=localhost
DB_PORT=5432

# Security & Authentication
# Generate a secure string for this secret
TOKEN_SECRET=your_token_secret_here

# Email Service (SMTP)
# Use an App Password if using Gmail/Outlook
SMTP_APP_PASSWORD=your_smtp_app_password

# Twilio API Configuration
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_PHONE_NUMBER=your_twilio_phone_number

# Firebase / Infrastructure
# Path to your local service account JSON file
FIREBASE_CREDENTIALS_PATH=path/to/your/firebase-credentials.json